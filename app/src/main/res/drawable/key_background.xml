<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default -->
    <item android:state_pressed="false">
        <inset android:insetBottom="10dp" android:insetLeft="3dp" android:insetRight="3dp">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFFFF" /> <!-- Your normal key color -->
                <corners android:radius="8dp" />
            </shape>
        </inset>
    </item>

    <!-- Pressed -->
    <item android:state_pressed="true">
        <inset android:insetBottom="10dp" android:insetLeft="3dp" android:insetRight="3dp">
            <shape android:shape="rectangle">
                <solid android:color="#FFEEEEEE" /> <!-- Darker color when pressed -->
                <corners android:radius="8dp" />
            </shape>
        </inset>
    </item>

    <!-- Focused -->
    <item android:state_focused="true">
        <inset android:insetBottom="10dp" android:insetLeft="3dp" android:insetRight="3dp">
            <shape android:shape="rectangle">
                <solid android:color="#FFDDDDDD" /> <!-- Slightly different color when focused -->
                <corners android:radius="8dp" />
                <stroke android:width="1dp" android:color="#FF0000FF" />
            </shape>
        </inset>
    </item>
</selector>
